
<div class="col s12 m6 l3 boardWidget">
    <div class="imageFrame z-depth-3" style="background-image: url('[[+image]]')">

    </div>

    <div class="boardInfo">
        <h5>[[+name]]</h5>
        <span>[[+title]]</span>
        <p>[[+description]]</p>
        <ul class="socialLinks">
            <li>
                <a href="[[+twitter_url]]">
                    <img src="img/social/twitter.svg" alt="Twitter">
                </a>
            </li>
            <li>
                <a href="[[+facebook_url]]">
                    <img src="img/social/facebook.svg" alt="facebook">
                </a>
            </li>
            <li>
                <a href="[[+linked_url]]">
                    <img src="img/social/linkedin.svg" alt="linkedin">
                </a>
            </li>
            <li>
                <a href="[[+instagram_url]]">
                    <img src="img/social/pinterest.svg" alt="instagram">
                </a>
            </li>
        </ul>
    </div>

</div>

<input type="hidden" class="totalpages" name="totalpages" value="[[+totalPages]]" />